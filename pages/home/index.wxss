/**index.wxss**/
.home-banner{
  width: 100%;
  position: relative;
}
.home-banner-describe{
  position: absolute;
  top: 25%;
  right: 10%;
  color: #fff;
}
.slide-image{
  width: 100%;
}
.core{
  position: relative;
}
.core-card{
  margin: 10px;
  margin-right: 20px;
  position: absolute;
  left: 40px;
}
.core-card:nth-of-type(0){
  top: 0px;
}
.core-card:nth-of-type(1){
  top: 200px;
}
.core-card:nth-of-type(3){
  top: 400px;
}
.core-card:nth-of-type(4){
  top: 600px;
}
.core-card-square{
  /* width: calc(100vw - 110px); */
  height: 120px;
  padding: 20px;
  padding-left: 60px;
  box-shadow: 2px 2px 5px #A9A9A9;
  border-radius: 15px;
  background: linear-gradient(160deg, #b100ff 20%,#00b3ff 80%);
  color: #fff;
  font-size: 12px;
  
}
.core-card-circle{
  position: absolute;
  top: 40px;
  left: -30px;
  width: 70px;
  height: 70px;
  text-align: center;
  line-height: 70px;
  border-radius: 70px;
  border: 1px solid #b100ff;
  background-color: #fff;
  z-index: 2;
}